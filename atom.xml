---
layout: none
---
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title | xml_escape }}</title>
  <link href="http://www.jeroenreijn.com/"/>
  <link type="application/atom+xml" rel="self" href="http://blog.jeroenreijn.com/atom.xml"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://blog.jeroenreijn.com/</id>
  {% for post in site.posts %}
  <entry>
    <id>http://blog.jeroenreijn.com{{ post.url }}</id>
    <link type="text/html" rel="alternate" href="http://blog.jeroenreijn.com{{ post.url }}"/>
    <title>{{ post.title | xml_escape }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Jeroen Reijn</name>
      <uri>http://blog.jeroenreijn.com/</uri>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}

</feed>
